<% if current_user.liked?(micropost) %>
  <%= form_for(current_user.likes.find_by(user_id: current_user.id, micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :microposts_id, micropost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :microposts_id, micropost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-success btn-xs' %>
  <% end %>
<% end %>